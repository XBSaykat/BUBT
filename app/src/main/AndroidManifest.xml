<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geeknot.bubt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroSliderActivity.IntroSliderActivity" />
        <activity android:name=".SplashActivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignUpActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ChooseUserModeActivity"
            android:label="Please Select one Mode"
            android:theme="@style/NoTitleDialog" />
        <activity
            android:name=".InfoStudentActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".InfoTeacherActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>